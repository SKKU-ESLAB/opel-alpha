# Install Information for Target Device
export OPEL_TARGET_NAME="tegraTX1"
export OPEL_SYSTEM_BIN_DIR="/usr/bin"

# Dependent binary path
export OPEL_WPA_SUPPLICANT_PATH="/usr/bin/opel-deps/wpa_supplicant"
export OPEL_WPA_CLI_PATH="/usr/bin/opel-deps/wpa_cli"
export OPEL_DELETESEM_PATH="/usr/bin/opel-deps/deletesem"

# Runtime directory Path
export OPEL_BIN_DIR="/etc/opel/bin"
export OPEL_CONFIG_DIR="/etc/opel/config"
export OPEL_SENSOR_DRIVER_DIR="/etc/opel/sensor-drivers"
export OPEL_APPS_DIR="/etc/opel/apps"
export OPEL_DATA_DIR="/etc/opel/data"

# Wi-fi Direct Name
export OPEL_WFD_NAME="OPEL-Tegra"
