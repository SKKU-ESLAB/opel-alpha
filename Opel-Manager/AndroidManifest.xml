<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.opel_manager"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/opel"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.gst_sdk_tutorials.rpi_control.rpiviewer"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar">
            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name=".settingView" />
        <activity android:name=".appMarketView" />
        <activity android:name=".setting_subView" />
        <activity android:name=".notificationView" />
        <activity android:name=".appManagerView" />
        <activity android:name=".configurationView" />
        <activity android:name=".cameraStreamingView" />
        <activity android:name=".sensorView" />
        <activity android:name=".fileManagerView" />
        <activity android:name=".eventLoggerView" />

        <service
            android:name=".MqttBroadCastService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".splashView"
            android:label="@string/title_activity_splash_viewer"></activity>
        <activity android:name="selectiveconnection.DeviceListActivity"
            android:theme="@android:style/Theme.DeviceDefault.Dialog"></activity>
    </application>

</manifest>